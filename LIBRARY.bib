issn = {13652486},
journal = {Global Change Biology},
keywords = {Bengaluru,India,agrobiodiversity,beta-diversity,biotic homogenization,community differentiation,environmental filtering,nestedness,turnover,urban agriculture},
number = {June},
pages = {1--15},
title = {{Taxonomic and functional homogenization of farmland birds along an urbanization gradient in a tropical megacity}},
