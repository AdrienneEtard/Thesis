isbn = {0000000189880},
issn = {14712954},
journal = {Proceedings of the Royal Society B: Biological Sciences},
keywords = {Corona spy satellite imagery,agricultural conversion,burrowing mammal,land-use change,long-term species decline},
number = {1927},
pmid = {32429811},
title = {{Cold War spy satellite images reveal long-term declines of a philopatric keystone species in response to cropland expansion}},
