doi = {10.1046/j.1365-2656.1998.00215.x},
file = {:C\:/Users/adrie/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Paradis et al. - 1998 - Patterns of natal and breeding dispersal in birds.pdf:pdf},
