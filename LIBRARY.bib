issn = {14668238},
journal = {Global Ecology and Biogeography},
keywords = {biodiversity loss,ecosystem properties,input intensity,land-use change,land-use intensification,output intensity,predictive model},
number = {5},
pages = {924--932},
title = {{Biodiversity models need to represent land-use intensity more comprehensively}},
