issn = {16180089},
journal = {Basic and Applied Ecology},
keywords = {Diversity,Fertilisation,Insects,Mowing,Plant-pollinator networks,Pollinators},
number = {4},
pages = {292--299},
publisher = {Elsevier GmbH},
title = {{Land use intensity in grasslands: Changes in biodiversity, species composition and specialisation in flower visitor networks}},
